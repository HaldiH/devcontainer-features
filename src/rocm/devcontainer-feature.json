{
    "id": "rocm",
    "version": "0.1.3",
    "name": "ROCm",
    "description": "Installs the ROCm stack for AMD GPUs",
    "options": {
        "rocmVersion": {
            "type": "string",
            "default": "6.4.1",
            "description": "ROCm version to install"
        }
    },
    "securityOpt": [
        "seccomp=unconfined"
    ],
    "privileged": true,
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}