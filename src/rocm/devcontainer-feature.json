{
    "id": "rocm",
    "version": "0.1.1",
    "name": "ROCm",
    "description": "Installs the ROCm stack for AMD GPUs",
    "options": {
        "rocmVersion": {
            "type": "string",
            "default": "6.4.1",
            "description": "ROCm version to install"
        }
    },
    "securityOpt": [
        "seccomp=unconfined"
    ],
    "mounts": [
        {
            "source": "/dev/kfd",
            "target": "/dev/kfd",
            "type": "bind"
        },
        {
            "source": "/dev/dri",
            "target": "/dev/dri",
            "type": "bind"
        }
    ],
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}